#Here I updated the city from New York City to Seattle
UPDATE customers
SET city = 'Seattle'
WHERE customer_id = 1;

#Here I updated the street address to 2333 Indiana Street
UPDATE customers
SET address = '2333 Indiana Street'
WHERE customer_id = 1;

#Here I updated the city to Nashville
UPDATE customers
SET city = 'Nashville'
WHERE customer_id = 2;

#Here I updated the state to Tennessee
UPDATE customers
SET state = 'TN'
WHERE customer_id = 2;
